<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/gapSmall">

    <TextView
        android:id="@+id/tv_client"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gapSmall"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/gapSmall"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alex Smith" />

    <TextView
        android:id="@+id/tv_source_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_client"
        app:layout_constraintTop_toBottomOf="@id/tv_client"
        tools:text="rentalcars" />

    <TextView
        android:id="@+id/tv_res_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gapSmall"
        android:layout_marginBottom="@dimen/gapSmall"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_source_name"
        app:layout_constraintStart_toEndOf="@id/tv_source_name"
        tools:text="122123" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gapSmall"
        android:layout_marginBottom="@dimen/gapSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_client"
        app:layout_constraintTop_toBottomOf="@id/tv_source_name"
        android:textColor="?attr/errorTextColor"
        tools:text="@string/reservation_not_found" />


    <TextView
        android:id="@+id/tv_company_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gapSmall"
        android:layout_marginEnd="@dimen/gapSmall"
        android:textAllCaps="true"
        android:textColor="?attr/text_extra_color"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RM" />


</androidx.constraintlayout.widget.ConstraintLayout>