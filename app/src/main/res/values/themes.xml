<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineFleet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_extra_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background_extra_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/gray_extra_light</item>
        <item name="colorOnBackground">@color/gray_extra_light</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:textColorPrimary">@color/gray_middle_dark</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
        <item name="errorTextColor">@color/red</item>


        <item name="inactive_button_color">@color/gray</item>
        <item name="button_primary_color">@color/green</item>
        <item name="button_dark_color">@color/green_dark</item>
        <item name="placeholder_color">@color/gray_extra_light</item>
        <item name="text_primary_color">@color/gray_middle_dark</item>
        <item name="text_extra_light_color">@color/gray</item>
        <item name="text_extra_color">@color/gray_light</item>
        <item name="android:textColor">@color/gray_middle_dark</item>
        <item name="background_primary_color">@color/white</item>
        <item name="background_extra_color">@color/gray_extra_light</item>
        <item name="background_shadow_color">@color/gray_light</item>
        <item name="background_extra_dark_color">@color/gray</item>
        <item name="background_extra_light_color">@color/gray_dbl_extra_light</item>
        <item name="icon_color">@color/green</item>
        <item name="text_link_color">@color/color_link</item>
    </style>

    <style name="GreenButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/green_button_ripple</item>
    </style>

    <style name="GreenButtonFullScreen" parent="GreenButton">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GreenButtonMargin" parent="GreenButton">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/gapMedium</item>
        <item name="android:layout_marginEnd">@dimen/gapMedium</item>
        <item name="android:layout_marginBottom">@dimen/gapMedium</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberPickerBigText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SplashScreen" parent="Theme.OnlineFleet">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>